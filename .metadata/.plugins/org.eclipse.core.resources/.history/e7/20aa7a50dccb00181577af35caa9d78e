public class LambdasCalc {

   public static void main(String args[]) {
	   LambdasCalc tester = new LambdasCalc();
//	   addition(10, 5, tester);
//	   subtraction(10, 5, tester);
//	   multiplication(10, 5, tester);
//	   division(20, 5, tester);
   }
	
   interface MathOperation {
      int operation(int a, int b);
   }
	
	
   private int operate(int a, int b, MathOperation mathOperation) {
      return mathOperation.operation(a, b);
   }
   
   public static void addition(int a, int b, int opr,  LambdasCalc obj) {
	   
	   switch (opr) {
       case 1:  addition = "+";
                break;
       case 2:  monthString = "February";
                break;
       case 3:  monthString = "March";
                break;
       case 4:  monthString = "April";
                break;
	   
	   
	   
	   MathOperation addition = (first, second) -> first + second;
	   System.out.println(a + " + " + b + " = " + obj.operate(a, b, addition));
	   
   }
   
